name: Ubuntu x64 CI

on:
  push:
    branches: [ test_actions ]
  pull_request:
    branches: [ master ]

jobs:
  build_x64:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Set up build environment
      run: sudo apt install build-essential cmake

    - name: Create build directory
      run: mkdir build

    - name: Configure CMake
      run: cd build; cmake -DCMAKE_BUILD_TYPE=Release -DBUILD_32_BIT=0 ..

    - name: Build
      run: cd build; cmake --build .

    - name: Test
      run: echo "no-op for now"

    - name: Make artifact directory
      run: mkdir -p ${{ github.workspace }}/artifacts; ls -l ${{ github.workspace }}

    - name: Copy library files
      run: mkdir -p ${{ github.workspace }}/artifacts/lib; cd ${{ github.workspace }}/build/bin_dist; cp libplctag.so* libplctag.a ${{ github.workspace }}/artifacts/lib/

    - name: Copy dev files
      run: mkdir -p ${{ github.workspace }}/artifacts/dev; cd ${{ github.workspace }}/build/bin_dist; cp libplctag.h libplctag.pc ${{ github.workspace }}/artifacts/dev/

    - name: Copy tools files
      run: mkdir -p ${{ github.workspace }}/artifacts/tools; cd ${{ github.workspace }}/build/bin_dist; cp list_tags tag_rw ${{ github.workspace }}/artifacts/tools/

    - name: Copy all files
      run: mkdir -p ${{ github.workspace }}/artifacts/all; cd ${{ github.workspace }}/build/bin_dist; cp * ${{ github.workspace }}/artifacts/all/

    - name: Upload library ZIP artifact
      uses: actions/upload-artifact@v1
      with:
        name: libplctag_ubuntu_x64_lib_@VERSION@.zip
        path: ${{ github.workspace }}/artifacts/lib/

    - name: Upload development ZIP artifact
      uses: actions/upload-artifact@v1
      with:
        name: libplctag_ubuntu_x64_dev_@VERSION@.zip
        path: ${{ github.workspace }}/artifacts/dev/

    - name: Upload tools ZIP artifact
      uses: actions/upload-artifact@v1
      with:
        name: libplctag_ubuntu_x64_tools_@VERSION@.zip
        path: ${{ github.workspace }}/artifacts/tools/

    - name: Upload everything ZIP artifact
      uses: actions/upload-artifact@v1
      with:
        name: libplctag_ubuntu_x64_all_@VERSION@.zip
        path: ${{ github.workspace }}/artifacts/all/

