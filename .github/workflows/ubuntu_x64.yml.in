name: Ubuntu x64 CI

on:
  push:
    branches: [ test_actions ]
  pull_request:
    branches: [ master ]

jobs:
  build_x64:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Set up build environment
      run: sudo apt install build-essential cmake

    - name: Create build directory
      run: mkdir Build

    - name: Enter build directory
      run: cd build

    - name: Configure CMake
      run: cmake -DCMAKE_BUILD_TYPE=Release -DBUILD_32_BIT=0 ..

